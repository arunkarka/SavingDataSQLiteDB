<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arunkarka.savingdatasqlitedb.MainActivity"
    android:padding="@android:dimen/app_icon_size">


    <Button
        android:id="@+id/create_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_db"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/add_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_record_db"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/create_db"
        />
    <Button
        android:id="@+id/modify_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modify_record_id"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/add_record"
        />
    <Button
        android:id="@+id/delete_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_record_id"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/modify_record"
        />
    <Button
        android:id="@+id/delete_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_db"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/delete_record"
        />

</android.support.constraint.ConstraintLayout>
